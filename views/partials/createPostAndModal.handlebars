<button type="button" id="create-post-button"><i class="fas fa-comment-dots"></i></button>

<div id="modal-backdrop" class="hidden"></div>
<div id="create-post-modal" class="hidden">
  <div class="modal-dialog">

	<div class="modal-header">
	  <h3>Create a Post</h3>
	  <button type="button" class="modal-close-button">&times;</button>
	</div>

	<div class="modal-body">
	  <div class="post-input-element">
		<label for="post-reply-input">Reply</label>
		<input type="text" id="post-reply-input" placeholder="0">
	  </div>
	  <div class="post-input-element">
		<label for="post-URL-input">Image URL</label>
		<input type="text" id="post-URL-input" placeholder="Optional">
	  </div>
	  <div class="post-input-element">
		<label for="post-text-input">Post Text</label>
		<textarea id="post-text-input"></textarea>
	  </div>
	  <div class="post-input-element">
		<label for="post-author-input">Author</label>
		<input type="text" id="post-author-input" placeholder="Anonymous">
	  </div>
	</div>

	<div class="modal-footer">
	  <button type="button" class="modal-cancel-button">Cancel</button>
	  <button type="button" class="modal-accept-button">Create Post</button>
	</div>

  </div>
</div>